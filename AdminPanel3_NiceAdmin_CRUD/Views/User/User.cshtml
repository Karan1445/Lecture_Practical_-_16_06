@using System.Data
@model DataTable
<div class="pagetitle">
    <h1>User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">User</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="d-flex justify-content-end align-items-end">
        <a class="btn btn-primary " asp-action="AddUser" asp-controller="User">Add New User</a>
    </div>
    <!-- Table with stripped rows -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Action</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">MobileNo.</th>
                <th scope="col">Address</th>
                <th scope="col">Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow product in Model.Rows)
            {
                <tr>
                    <td class="row">
                        <a class=" col btn btn-warning" asp-action="AddUser" asp-route-UserID="@product["UserID"]"  asp-controller="User">Edit</a>
                        <form class="col" asp-controller="User" asp-action="Delete" asp-route-UserID="@product["UserID"]">
                            <button class="col btn btn-danger bi bi-trash" onclick="return confirm('are you sure!')"></button>
                        </form>
                    </td>
                    <td>@product["UserName"]</td>
                    <td>@product["Email"]</td>
                    <td>@product["Password"]</td>
                    <td>@product["MobileNo"]</td>
                     <td>@product["Address"]</td>
                  
                    @{
                        if (product["IsActive"].Equals(true) || product["IsActive"].Equals("True"))
                        {
                            <td class="h2 bi bi-check text-success"></td>
                        } 
                        else
                        {
                            <td class="h2 bi bi-x text-danger"></td>

                        }
                    } 
                  
                </tr>
            }


        </tbody>
    </table>
    <!-- End Table with stripped rows -->

</section>@{
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}
@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}