@using System.Data
@model DataTable
<div class="pagetitle">
    <h1>User</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">User</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="d-flex justify-content-end align-items-end">
        <a class="btn btn-primary " asp-action="AddUser" asp-controller="User">Add New User</a>
    </div>
    <!-- Table with stripped rows -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">UserID</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">MobileNo.</th>
                <th scope="col">Address</th>
                <th scope="col">IsActive</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow product in Model.Rows)
            {
                <tr>
                    <th>@product["UserID"]</th>
                    <td>@product["UserName"]</td>
                    <td>@product["Email"]</td>
                    <td>@product["Password"]</td>
                    <td>@product["MobileNo"]</td>
                    <td>@product["Address"]</td>
                    <td>@product["IsActive"]</td>
                    <td>
                        <a class="btn btn-warning" asp-action="AddEmployee" asp-controller="Home">Edit</a>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }


        </tbody>
    </table>
    <!-- End Table with stripped rows -->

</section>