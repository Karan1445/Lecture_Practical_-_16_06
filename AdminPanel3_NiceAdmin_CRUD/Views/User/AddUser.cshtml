<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add New Product</h5>

            <!-- Horizontal Form -->
            <form asp-controller="User" asp-action="AddInContoller">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">UserName </label>
                    <div class="col-sm-10">

                        <input type="text" class="form-control" name="UserName" required />
                    </div>
                    .
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">

                        <input type="email" class="form-control" name="Email" required />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Password" required />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">MobileNo</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" name="MobileNo" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Address" required />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">IsActive</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="IsActive" required />
                    </div>
                </div>




                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form><!-- End Horizontal Form -->

        </div>
    </div>
</section>