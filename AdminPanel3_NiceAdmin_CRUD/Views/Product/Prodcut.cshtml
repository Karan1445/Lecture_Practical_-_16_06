@using System.Data
@model DataTable
<div class="pagetitle">
    <h1>Product</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">Product</li>
        </ol>
    </nav>

</div><!-- End Page Title -->
<section class="section">
    <div class="d-flex justify-content-end align-items-end">
        <a class="btn btn-primary " asp-action="AddProduct" asp-controller="Product">Add New Product</a>
    </div>
    <!-- Table with stripped rows -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Action</th>
                <th scope="col">ProductName</th>
                <th scope="col">ProductPrice</th>
                <th scope="col">ProductCode</th>
                <th scope="col">Description</th>
                <th scope="col">UserName</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow product in Model.Rows)
            {
                <tr>
                    <td class="row">
                        <a class="btn btn-warning col" asp-action="AddProduct" asp-route-ProductID="@product["ProductID"]" asp-controller="Product">Edit</a>
                        <form class="col" asp-action="Delete" asp-route-ProductID="@product["ProductID"]" asp-controller="Product">
                            <button class="bi bi-trash btn btn-danger" onclick="return confirm('Are you sure!')"></button>
                        </form>
                    </td>
                    <td>@product["ProductName"]</td>
                    <td>@product["ProductPrice"]</td>
                    <td>@product["ProductCode"]</td>
                    <td>@product["Description"]</td>
                    <td>@product["UserName"]</td>
                  
                </tr>
            }


        </tbody>
    </table>
    <!-- End Table with stripped rows -->

</section>@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}
@{
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}   