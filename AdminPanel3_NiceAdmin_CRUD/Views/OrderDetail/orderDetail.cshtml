@using System.Data
@model DataTable
<div class="pagetitle">
    <h1>OrderDetail</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">OrderDetail</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="d-flex justify-content-end align-items-end">
        <a class="btn btn-primary " asp-action="AddOrderDetail" asp-controller="OrderDetail">Add New OrderDetail</a>
    </div>
    <!-- Table with stripped rows -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Action</th>
                
                <th scope="col">OrderId</th>
                <th scope="col">ProductName</th>
                <th scope="col">Quality</th>
                <th scope="col">Amount</th>
                <th scope="col">ToatalAmount</th>
                <th scope="col">UserName</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow orderDetails in Model.Rows)
            {
                <tr>
                    <td class="row">
                        <a class=" col btn btn-warning" asp-action="AddOrderDetail" asp-route-OrderDetailId="@orderDetails["OrderDetailID"]" asp-controller="OrderDetail">Edit</a>
                        <form class="col " asp-action="Delete" asp-controller="OrderDetail" asp-route-OrderDetailId="@orderDetails["OrderDetailID"]">
                            <button class="bi bi-trash btn btn-danger" onclick="return confirm('Are you Sure!')"></button>
                        </form>
                    </td>
                    <td>@orderDetails["OrderID"]</td>
                    <td>@orderDetails["ProductName"]</td>
                    <td>@orderDetails["Quantity"]</td>
                    <td>@orderDetails["Amount"]</td>
                    <td>@orderDetails["TotalAmount"]</td>
                    <td>@orderDetails["UserName"]</td>
                  
                </tr>
            }


        </tbody>
    </table>
    <!-- End Table with stripped rows -->

</section>@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}
@{
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}